{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "lldb_hosted",
            "type": "lldb",
            "request": "launch",            
            "program": "${workspaceFolder}/../../../hosted/build/swindle_hosted", 
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gdb_hosted",
            "type": "gdb",
            "request": "launch",            
            "target": "${workspaceFolder}/../../../hosted/build/swindle_hosted",            
            "cwd": "${workspaceFolder}"
        },      
{
                "name": "Arm",
                "cwd": "${workspaceFolder}",
                "svdFile" : "${workspaceRoot}/.vscode/STM32F103.svd",              
                "executable": "../../../build/lnBMP_default_pinout_M4_96M_CLANG.elf",
      
                "request": "launch",
                "type": "cortex-debug",
                "runToEntryPoint": "main",
                "servertype": "bmp",
                "interface": "swd",
                "device": "STM32F103",
                "BMPGDBSerialPort" : "/dev/ttyBmpGdb3",
                "runToMain": true,
                "gdbPath" : "${config:armToolchainPath}/arm-none-eabi-gdb",     
                "preLaunchCommands":[
                "b deadEnd",
                "set mem inaccessible-by-default off",
                "set confirm off"
                ],
                "preRestartCommands": [
                "enable breakpoint",
                "break main"
                ]
      
            },
    ]
}
